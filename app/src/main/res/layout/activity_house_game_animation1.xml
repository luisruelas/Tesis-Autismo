<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bghouses"
    android:orientation="horizontal"
    android:weightSum="10"
    android:gravity="bottom|right"
    android:paddingBottom="10dp"
    tools:context=".Games.HousesGame.ActivityHouseGameAnimation1">
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:gravity="right"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:padding="@dimen/tvpadding"
            android:layout_height="wrap_content"
            android:background="@drawable/globodetextobg"
            android:text="@string/instruccionescasas"/>

            <ImageView
                android:layout_width="@dimen/eddysaludandowidth"
                android:layout_height="@dimen/eddysaludandoheight"
                android:background="@drawable/eddybrazosabajo"/>
        <Button
            android:layout_width="@dimen/nextbuttonwidth"
            android:layout_height="@dimen/nextbuttonheight"
            android:background="@drawable/btright"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom"
            android:onClick="gotoHousesInstructions"
            />
    </LinearLayout>
</LinearLayout>
