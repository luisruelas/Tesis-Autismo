<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10"
    android:background="@drawable/bgtierraborroso"
    android:gravity="center"
    tools:context="com.example.ruelas.tesis.Menus.SubjectsMenuActivity">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/btheight"
        android:background="@drawable/btarte"
        android:layout_marginBottom="@dimen/separationamongbuttonsmenu2"
        android:onClick="goToArt"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/btheight"
        android:background="@drawable/bthistoria"
        android:layout_marginBottom="@dimen/separationamongbuttonsmenu2"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/btheight"
        android:background="@drawable/btgeografia"
        android:layout_marginBottom="@dimen/separationamongbuttonsmenu2"/>

</LinearLayout>
</LinearLayout>