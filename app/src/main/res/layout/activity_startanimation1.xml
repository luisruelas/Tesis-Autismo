<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bganimationspace"
    tools:context=".StartAnimation.ActivityStartAnimation1"
    android:id="@+id/rlanimation1container">
    <ImageView
        android:layout_width="@dimen/eddysaludandowidth"
        android:layout_height="@dimen/eddysaludandoheight"
        android:background="@drawable/eddysaludando"
        android:id="@+id/iveddysaludando"
        android:paddingLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:padding="@dimen/tvpadding"
        android:background="@drawable/globodetextobg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/hola"
        android:id="@+id/ivglobodetexto"
        android:layout_above="@+id/iveddysaludando"
        android:layout_toRightOf="@+id/iveddysaludando" />
    <Button
        android:layout_width="@dimen/nextbuttonwidth"
        android:layout_height="@dimen/nextbuttonheight"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="next"
        android:background="@drawable/btright"/>
</RelativeLayout>
