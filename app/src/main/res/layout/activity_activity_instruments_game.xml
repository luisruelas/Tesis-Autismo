<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgtierrasinnave"
    android:orientation="vertical"
    android:paddingTop="@dimen/piddingtopinstrument"
    android:weightSum="10"
    tools:context=".Games.InstrumentsGame.ActivityInstrumentsGameInstructions">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_weight="6">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_weight="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="5"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <Button
                        android:id="@+id/btgamemarimba"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:background="@drawable/marimba" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:gravity="center_horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/tvgamemarimba"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:background="@drawable/btblank" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="5"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <Button
                        android:id="@+id/btgametambor"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:background="@drawable/tambor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:gravity="center_horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/tvgametambor"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:background="@drawable/btblank" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="5"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <Button
                        android:id="@+id/btgamemaracas"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:background="@drawable/maracas" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:gravity="center_horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/tvgamemaracas"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:background="@drawable/btblank" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="5"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <Button
                        android:id="@+id/btgameguitarra"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:background="@drawable/guitarra" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:gravity="center_horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/tvgameguitarra"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:background="@drawable/btblank" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="10"></LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.8"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="top"
            android:orientation="vertical"
            android:weightSum="10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/tvpadding"
                android:background="@drawable/globodetextobg"
                android:text="@string/seleccionaintrumento">

            </TextView>
        </LinearLayout>


        <ImageView
            android:layout_width="@dimen/eddysaludandowidth"
            android:layout_height="match_parent"
            android:background="@drawable/eddybrazosarriba" />
        <Button
            android:layout_width="@dimen/nextbuttonheight"
            android:layout_height="@dimen/nextbuttonheight"
            android:layout_gravity="bottom"
            android:id="@+id/btplaysound"
            android:onClick="playSound"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btsonido"/>
    </LinearLayout>

</LinearLayout>
